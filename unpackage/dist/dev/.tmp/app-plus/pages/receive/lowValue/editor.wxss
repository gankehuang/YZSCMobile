.semen-editor {
  background-color: #F5F5F5;
  padding: 0 30rpx;
}
.semen-editor .editor-title {
    height: 80rpx;
}
.semen-editor .editor-title .img {
      line-height: 80rpx;
}
.semen-editor .editor-title .img image {
        width: 12rpx;
        height: 12rpx;
        vertical-align: middle;
}
.semen-editor .editor-title text {
      margin-left: 14rpx;
      line-height: 80rpx;
      font-size: 32rpx;
}
.semen-editor .editor-title .confirm-btn {
      width: 140rpx;
      height: 54rpx;
}
.semen-editor .editor-title .confirm-btn button {
        width: 140rpx;
        height: 54rpx;
        font-size: 24rpx;
        padding: 0;
        background-color: #4684EA;
}
.semen-editor .editor-title.form-seat {
      height: 120rpx;
}
.semen-editor .card-form .form-list {
    height: 96rpx;
    border-bottom: 1rpx solid #EBEEF2;
    font-size: 28rpx;
}
.semen-editor .card-form .form-list .field text {
      color: #FF6354;
      margin-left: 10rpx;
}
.semen-editor .card-form .form-list .s-value {
      color: #B2B2B2;
      vertical-align: middle;
}
.semen-editor .card-form .form-list .s-value.d-num {
        text-align: right;
}
.semen-editor .card-form .form-list .s-value input {
        font-size: 28rpx;
}
.semen-editor .submits {
    margin: 90rpx 0;
}
.semen-editor .submits button {
      width: 316rpx;
      height: 88rpx;
}
.semen-editor .submits button.editor-btn {
        background-color: #ffffff;
        color: #4684EA;
}
.semen-editor .submits button.submit-btn {
        background-color: #4684EA;
}

