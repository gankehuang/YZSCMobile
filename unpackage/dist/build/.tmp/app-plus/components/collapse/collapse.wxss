.editor-title {
  height: 44rpx;
  width: 100%;
  margin-bottom: 20rpx;
}
.editor-title .title {
    color: #4D4D4D;
    font-weight: bold;
}
.editor-title .img {
    line-height: 44rpx;
}
.editor-title .img image {
      width: 12rpx;
      height: 12rpx;
      vertical-align: middle;
}
.editor-title text {
    margin-left: 14rpx;
    line-height: 44rpx;
    font-size: 32rpx;
}
.detail-item {
  background: #FFFFFF;
  border-radius: 8rpx;
  padding: 26rpx 20rpx 10rpx;
}
.detail-item:last-child {
    margin-bottom: 15rpx;
}
.detail-item .detail-header {
    font-size: 28rpx;
    color: #333333;
}
.detail-item .detail-header .colorBlock {
      background: #3A75E7;
      width: 5rpx;
      height: 18rpx;
      display: inline-block;
      margin-right: 10rpx;
}
.detail-item .detail-body .detail-row {
    padding: 14rpx 0;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: start;
    -webkit-justify-content: flex-start;
        -ms-flex-pack: start;
            justify-content: flex-start;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    border-bottom: 1px solid #CBCBCB;
}
.detail-item .detail-body .detail-row:last-child {
      border-bottom: none;
}
.detail-item .detail-body .detail-row .detail-row-item {
      width: 25%;
      text-align: center;
}
.detail-item .detail-body .detail-row .detail-row-item .num {
        color: #333333;
        font-weight: bold;
        font-size: 36rpx;
}
.detail-item .detail-body .detail-row .detail-row-item,
      .detail-item .detail-body .detail-row .detail-row-item .title {
        color: #999999;
        font-size: 24rpx;
}
.detail-item .detail-body .detail-row text {
      display: block;
      text-align: center;
}

