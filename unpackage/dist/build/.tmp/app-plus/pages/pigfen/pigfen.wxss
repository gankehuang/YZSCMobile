.page-wrapper {
  padding-top: 65px;
}
.pigfen_card_list {
  padding: 24rpx 30rpx;
}
.pigfen_card_list .pigfen_card_wrapper {
    margin-top: 32rpx;
}
.pigfen_card_list .pigfen_card_wrapper:first-child {
      margin-top: 0;
}
.pigfen_card_list .pigfen_card {
    height: 200rpx;
    background-color: white;
    border-radius: 16rpx;
    -webkit-box-shadow: 2rpx 4rpx 10rpx 2rpx #ccc;
            box-shadow: 2rpx 4rpx 10rpx 2rpx #ccc;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    overflow: hidden;
    position: relative;
    z-index: 2;
}
.pigfen_card_list .pigfen_card .seq {
      width: 120rpx;
      height: 100%;
      background: -webkit-gradient(linear, left top, left bottom, from(#6BA8FD), to(#5975E8));
      background: -o-linear-gradient(#6BA8FD, #5975E8);
      background: linear-gradient(#6BA8FD, #5975E8);
      color: white;
      font-size: 42rpx;
      font-weight: 600;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
          -ms-flex-align: center;
              align-items: center;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
          -ms-flex-pack: center;
              justify-content: center;
}
.pigfen_card_list .pigfen_card .seq.disabled {
        background: #C9C9C9;
}
.pigfen_card_list .pigfen_card .info {
      padding-left: 24rpx;
}
.pigfen_card_list .pigfen_card .info .label {
        color: #4D4D4D;
}
.pigfen_card_list .pigfen_card .info .value {
        color: #757575;
}
.pigfen_card_list .pigfen_card .more {
      padding-right: 24rpx;
}
.pigfen_card_list .pigfen_card .more .icon_more {
        -webkit-transition: all .3s ease-in;
        -o-transition: all .3s ease-in;
        transition: all .3s ease-in;
}
.pigfen_card_list .pigfen_card .more.rotate .icon_more {
        -webkit-transform: rotateZ(90deg);
            -ms-transform: rotate(90deg);
                transform: rotateZ(90deg);
}
.pigfen_card_list .pigfen_menu {
    height: 0;
    background-color: white;
    overflow: hidden;
    margin: 0 40rpx;
    text-align: center;
    border-bottom-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
    -webkit-box-shadow: 0 2rpx 2rpx rgba(0, 0, 0, 0.12), 0 0 2rpx rgba(0, 0, 0, 0.04);
            box-shadow: 0 2rpx 2rpx rgba(0, 0, 0, 0.12), 0 0 2rpx rgba(0, 0, 0, 0.04);
    -webkit-transition: all .2s;
    -o-transition: all .2s;
    transition: all .2s;
    opacity: 0;
}
.pigfen_card_list .pigfen_menu.show {
      height: 90rpx;
      opacity: 1;
}
