.semen-editor {
  background-color: #F5F5F5;
  padding: 0 30rpx;
}
.semen-editor .editor-title {
    height: 80rpx;
}
.semen-editor .editor-title .img {
      line-height: 80rpx;
}
.semen-editor .editor-title .img image {
        width: 12rpx;
        height: 12rpx;
        vertical-align: middle;
}
.semen-editor .editor-title text {
      margin-left: 14rpx;
      line-height: 80rpx;
      font-size: 32rpx;
}
.semen-editor .editor-title .confirm-btn {
      width: 140rpx;
      height: 54rpx;
}
.semen-editor .editor-title .confirm-btn button {
        width: 140rpx;
        height: 54rpx;
        font-size: 24rpx;
        padding: 0;
        background-color: #4684EA;
}
.semen-editor .editor-title.form-seat {
      height: 120rpx;
}
.semen-editor .card-form {
    height: 384rpx;
}
.semen-editor .card-form .form-list {
      height: 96rpx;
      border-bottom: 1rpx solid #EBEEF2;
      font-size: 28rpx;
}
.semen-editor .card-form .form-list .field text {
        color: #FF6354;
        margin-left: 10rpx;
}
.semen-editor .card-form .form-list .s-value {
        color: #B2B2B2;
        vertical-align: middle;
}
.semen-editor .card-form .form-list .s-value.d-num {
          text-align: right;
}
.semen-editor .submits {
    margin-top: 90rpx;
}
.semen-editor .submits button {
      width: 316rpx;
      height: 88rpx;
}
.semen-editor .submits button.editor-btn {
        background-color: #F05E57;
}
.semen-editor .submits button.submit-btn {
        background-color: #4684EA;
}
.screening {
  width: 520rpx;
  height: 100%;
  background-color: #FFFFFF;
  padding: 20rpx 40rpx;
}
.screening .title {
    margin-top: 40rpx;
    color: #4D4D4D;
    font-weight: 600;
}
.screening .s-input {
    height: 68rpx;
    background-color: #f6f6f6;
    margin-top: 10rpx;
    padding: 0 20rpx;
}
.screening .s-input input {
      height: 100%;
      font-size: 24rpx;
}
.screening .s-input image {
      width: 26rpx;
      height: 14rpx;
}
.screening .date {
    height: 68rpx;
    margin-top: 10rpx;
}
.screening .date .line {
      color: #757575;
}
.screening .date .date-wrap {
      background-color: #f6f6f6;
      width: 192rpx;
      padding: 0 18rpx;
}
.screening .date .date-wrap image {
        width: 40rpx;
        height: 40rpx;
}
.screening .date .date-wrap input {
        height: 100%;
        font-size: 24rpx;
}
.screening .s-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 600rpx;
    height: 88rpx;
    overflow: hidden;
    border-top: 2rpx solid #F5F5F5;
}
.screening .s-btn .btn {
      width: 50%;
      font-size: 32rpx;
      font-weight: 600;
}
.screening .s-btn .btn.s-submit {
        background-color: #4684EA;
        color: #fff;
}
.screening .s-btn .btn.s-reset {
        background-color: #fff;
}

